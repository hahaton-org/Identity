@page
@model Identity.Pages.Account.Register.IndexModel
@{
    ViewData["Title"] = "Регистрация";
}

@if (!string.IsNullOrEmpty(Model.View.SuccessMessage))
{
    <div class="alert alert-success">
        @Model.View.SuccessMessage
    </div>
}
@if (!string.IsNullOrEmpty(Model.View.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.View.ErrorMessage
    </div>
}

<h2>Регистрация партнёра</h2>

<form method="post">
    <input type="hidden" asp-for="Input.ReturnUrl" />

    <div class="form-group">
        <label asp-for="Input.Email">Email</label>
        <input class="form-control" asp-for="Input.Email" placeholder="Введите Email" />
        <span class="text-danger" asp-validation-for="Input.Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Password">Пароль</label>
        <input class="form-control" asp-for="Input.Password" type="password" placeholder="Введите пароль" />
        <span class="text-danger" asp-validation-for="Input.Password"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.ConfirmPassword">Подтверждение пароля</label>
        <input class="form-control" asp-for="Input.ConfirmPassword" type="password" placeholder="Подтвердите пароль" />
        <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
