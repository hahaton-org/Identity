@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Identity.Pages.Account.Register.Index
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<div class="register-page">
    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>@localizer["Регистрация пользователя"]</h2>
                </div>
                <div class="card-body">
                    <form asp-page="/Account/Register/Index">
                        <input type="hidden" asp-for="Input.ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Input.FullName">@localizer["ФИО"]</label>
                            <input type="text" class="form-control" placeholder="@localizer["Введите ФИО"]" asp-for="Input.FullName" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Email">@localizer["Email"]</label>
                            <input type="email" class="form-control" placeholder="@localizer["Введите Email"]" asp-for="Input.Email" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Password">@localizer["Пароль"]</label>
                            <input type="password" class="form-control" placeholder="@localizer["Введите пароль"]" asp-for="Input.Password" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword">@localizer["Подтверждение пароля"]</label>
                            <input type="password" class="form-control" placeholder="@localizer["Введите пароль повторно"]" asp-for="Input.ConfirmPassword" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Roles">@localizer["Выберите роль"]</label>
                            <select asp-for="Input.Roles" class="form-control">
                                <option value="Volunteer">@localizer["Волонтер"]</option>
                                <option value="Partner">@localizer["Партнер"]</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">@localizer["Зарегистрироваться"]</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a asp-page="../Login/Index">@localizer["Уже зарегистрированы? Войти"]</a>
                </div>
            </div>
        </div>
    </div>
</div>